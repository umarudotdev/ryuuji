{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ryuuji",
  "version": "0.1.0",
  "identifier": "dev.ryuuji.app",
  "build": {
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Ryuuji",
        "width": 1200,
        "height": 760,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "msi", "nsis"],
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ]
  }
}
